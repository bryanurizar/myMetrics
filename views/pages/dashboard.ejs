<!DOCTYPE html>
<html>
  <head>
    <title>Dashboard | myMetrics</title>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="/css/header.css" class="css">
    <link rel="stylesheet" href="/css/dashboard.css">
  </head>

  <body>
    <%- include('../partials/header');%>
    
    <section id="boards-section">
      <h2 id="greeting">Hey, <span id="user-name"> <%=user.name.givenName%>! ðŸ‘‹ </span> What are we working on today?</h2>
        <div id="create-board">
          <input class="create-board" type="text" placeholder="Create new board">
          <button class="btn create-btn">Create</button>
        </div>

      <div id="boards">  
        <% results.forEach(result => {%>
            <div class="board-card">
              <div class="dashboard-flaticons">
                <img class="flaticons edit" src="img/edit.svg" />
                <img class="flaticons trash" src="img/trash.svg" />
              </div>
              <a class="board-name" href="/boards/<%=result.boardid%>/<%=encodeURI(decodeURI(result.boardname.toLowerCase()).replace(/ /g, "-"))%>">
                <div>
                    <%= result.boardname %>
                </div>
            </a>
            </div>
        <% }); %>
      </div>
      </section>

    
    <script
      type="module"
      src="/javascript/dashboard.js"
      async
      defer
    ></script>
 
  </body>
</html>
