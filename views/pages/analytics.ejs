<!DOCTYPE html>
<html>
  <head>
    <title>Analytics | myMetrics</title>
    <%- include('../partials/head'); %>
  </head>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <body>
    <%- include('../partials/header'); %>
    <section class="charts">
      <div>
        <canvas
          id="item-count-by-boards"
          class="chart"
          width="350"
          height="225"
          arial-label="item-count-by-boards"
          role="img"
          ><p>A chart of the number of items for each board.</p></canvas
        >
      </div>
      <div>
        <canvas
          id="study-time-by-board"
          class="chart"
          width="350"
          height="225"
        ></canvas>
      </div>
      <div>
        <canvas
          id="study-time-by-periods"
          class="chart"
          width="350"
          height="225"
        ></canvas>
      </div>
      <div>
        <canvas
          id="pauses-per-study-sessions"
          class="chart"
          width="350"
          height="225"
        ></canvas>
      </div>
      <div>
        <canvas
          id="number-of-days-since-last-study-session"
          class="chart"
          width="350"
          height="225"
        ></canvas>
      </div>
      <div>
        <canvas
          id="leaderboard-position"
          class="chart"
          width="350"
          height="225"
        ></canvas>
      </div>
    </section>
    <script type="module" src="/javascript/charts.js"></script>
  </body>
</html>
